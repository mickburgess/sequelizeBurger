<img src="./assets/img/burger.png" alt="burger_pic" style="width:200px;" class="mt-3">

<h2 class="my-4 font-weight-bold">Eat-Da-Burger!</h2>

<div class="container">
  <div class="row">
    <div class="col-7">
      <ol>
        {{#each burger}} {{#unless devoured}}
        <li class="mb-2">
          <div class="row">
            <div class="col-7">
              <div class="bg-danger">
                <div>
                  {{ burger_name }}
                </div>
              </div>
            </div>
        
            <div class="col-5">
              <button class="make-devoured" data-id="{{ id }}" data-devoured="{{ devoured }}">Devour It</button>
            </div>
          </div>
        </li>
        {{/unless}} {{/each}}
      </ol>
    </div>
    
    <div class="col-5">
      <ol class="list-group">
        {{#each burger}} {{#if devoured}}
        <li class="mb-2 list-group-item list-group-item-success">
          <div>
            {{ burger_name }}
          </div>
        </li>
        {{/if}} {{/each}}
      </ol>
    </div>
  </div>
</div>

<form class="create-form mt-4">

  <div class="form-group">
    <input class="form-control w-25 p-4 " type="text" id="burgerInput" name="burger_name" placeholder="Enter a burger" maxlength="255">
  </div>
  <button type="submit" id="addBurgerButton">Add Burger</button>
</form>
<p>Enter a burger you want to eat and Click the "Submit" button</p>
